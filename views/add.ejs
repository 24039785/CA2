  <div class="container mt-5">
    <h2 class="mb-4 text-center">Add a New Hotel</h2>

    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-danger">
        <ul>
          <% messages.forEach(function(message) { %>
            <li><%= message %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/add" method="POST" enctype="multipart/form-data" class="mx-auto" style="max-width: 500px;">
      <div class="mb-3">
        <label for="name" class="form-label">Hotel Name</label>
        <input
          type="text"
          id="name"
          name="name"
          class="form-control"
          value="<%= formData.name || '' %>"
          required
        />
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          id="location"
          name="location"
          class="form-control"
          value="<%= formData.location || '' %>"
          required
        />
      </div>

      <div class="mb-3">
        <label for="roomType" class="form-label">Room Type</label>
        <input
          type="text"
          id="roomType"
          name="roomType"
          class="form-control"
          value="<%= formData.roomType || '' %>"
          required
        />
      </div>

      <div class="mb-3 form-check">
        <input
          type="checkbox"
          class="form-check-input"
          id="isAvailable"
          name="isAvailable"
          <%= formData.isAvailable ? 'checked' : '' %>
        />
        <label class="form-check-label" for="isAvailable">Available</label>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" class="form-control" id="image" name="image" />
      </div>

      <button type="submit" class="btn btn-primary w-100">Add Hotel</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

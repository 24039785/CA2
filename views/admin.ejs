    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Travelly</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card-img-top {
            height: 200px;
            object-fit: cover;
        }
        .availability {
            font-weight: bold;
        }
        .admin-actions {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Admin - Manage Bookings</h1>

        <div class="row g-4">
            <% if (bookings.length > 0) { %>
                <% bookings.forEach(booking => { %>
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100">
                            <img src="<%= booking.image %>" class="card-img-top" alt="<%= booking.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= booking.name %></h5>
                                <p class="card-text">
                                    <strong>Location:</strong> <%= booking.location %><br>
                                    <strong>Room Type:</strong> <%= booking.roomType %>
                                </p>
                                <p class="availability text-<%= booking.isAvailable ? 'success' : 'danger' %>">
                                    <%= booking.isAvailable ? 'Available' : 'Not Available' %>
                                </p>

                                <!-- Admin Controls (For Add and Delete Bookings Place Here)-->
                                
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center">No bookings available.</p>
            <% } %>
        </div>
    </div>
</body>
</html>
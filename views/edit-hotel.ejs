<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Edit Hotel - Travelly</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    .gradient-text {
      background: linear-gradient(to right, #ff6f00, #ff9100);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .btn-secondary {
      background: #343a40;
      border: none;
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand gradient-text" href="#">Travelly</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" href="/admin">Hotels Available</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/add">Add Hotel</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/edit-users">Edit User</a>
          </li>
        </ul>
        <a href="/logout" class="btn btn-secondary">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Edit Form -->
  <div class="container mt-5">
    <h1 class="mb-4">Edit Hotel Listing</h1>

    <form action="/admin/edit/<%= booking.bookingId %>" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="name" class="form-label">Hotel Name</label>
        <input type="text" class="form-control" name="name" value="<%= booking.name %>" required>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" name="location" value="<%= booking.location %>" required>
      </div>

      <div class="mb-3">
        <label for="roomType" class="form-label">Room Type</label>
        <input type="text" class="form-control" name="roomType" value="<%= booking.roomType %>" required>
      </div>

      <div class="mb-3">
        <label for="formFile" class="form-label">Choose New Image File (optional)</label>
        <input class="form-control" type="file" id="formFile" name="image">
        <img src="<%= booking.image %>" class="img-fluid mt-2" alt="Hotel Image" style="max-height: 200px;">
        <input type="hidden" name="existingImage" value="<%= booking.image %>">
      </div>

      <div class="form-check mb-3">
        <input type="checkbox" class="form-check-input" name="isAvailable" id="isAvailable" <%=booking.isAvailable
          ? 'checked' : '' %>>
        <label class="form-check-label" for="isAvailable">Available</label>
      </div>

      <button type="submit" class="btn btn-primary">Update Hotel</button>
      <a href="/admin" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

</body>

</html>
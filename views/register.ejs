<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Travelly</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('/images/Carlton.jpg') center/cover no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #000; /* fallback */
        }
        .register-container {
            background: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            width: 100%;
            max-width: 500px;
        }
        h1 {
            font-size: 48px;
            font-weight: bold;
            margin-bottom: 20px;
            color: rgb(255, 111, 0);
            text-align: center;
            animation: fadeIn 1.5s ease-in-out;
        }
        label {
            font-weight: bold;
            color: #343a40;
        }
        .btn {
            width: 100%;
            font-size: 18px;
            padding: 12px;
            border-radius: 50px;
            transition: transform 0.2s ease-in-out;
        }
        .btn-primary {
            background: linear-gradient(to right, #ff6f00, #ff9100);
            border: none;
        }
        .btn-primary:hover {
            transform: scale(1.05);
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .alert {
            text-align: center;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h1>Register</h1>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-danger">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>

        <form action="/register" method="POST" class="mt-4">
            <!-- Username -->
            <div class="form-group mb-3">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control" required
                    <% if (formData && formData.username) { %> value="<%= formData.username %>" <% } else { %> value="" <% } %>>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required
                    <% if (formData && formData.email) { %> value="<%= formData.email %>" <% } else { %> value="" <% } %>>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
            </div>

            <!-- Address -->
            <div class="form-group mb-3">
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" class="form-control" required
                    <% if (formData && formData.address) { %> value="<%= formData.address %>" <% } else { %> value="" <% } %>>
            </div>

            <!-- Contact -->
            <div class="form-group mb-3">
                <label for="contact">Contact Number:</label>
                <input type="text" id="contact" name="contact" class="form-control" required
                    <% if (formData && formData.contact) { %> value="<%= formData.contact %>" <% } else { %> value="" <% } %>>
            </div>

            <!-- Role -->
            <div class="form-group mb-4">
                <label for="role">Role:</label>
                <select id="role" name="role" class="form-control" required>
                    <option value="user" <% if (formData && formData.role === 'user') { %> selected <% } %>>User</option>
                    <option value="admin" <% if (formData && formData.role === 'admin') { %> selected <% } %>>Admin</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</body>
</html>

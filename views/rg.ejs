<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Flare Air</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      background-color: #f8f9fa;
    }
    h1 {
      margin-bottom: 20px;
    }
    form {
      max-width: 500px;
    }
    label {
      display: block;
      margin-top: 10px;
    }
    input, select {
      width: 100%;
      padding: 8px;
      margin-top: 4px;
      box-sizing: border-box;
    }
    .alert {
      background-color: #f8d7da;
      padding: 10px;
      color: #721c24;
      border: 1px solid #f5c6cb;
      margin-bottom: 15px;
    }
    button {
      margin-top: 15px;
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>

  <h1>Register</h1>

  <% if (messages && messages.length > 0) { %>
    <div class="alert">
      <% messages.forEach(function(message) { %>
        <p><%= message %></p>
      <% }); %>
    </div>
  <% } %>

  <form action="/register" method="POST">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required 
      <% if (formData && formData.username) { %> value="<%= formData.username %>" <% } else { %> value="" <% } %>>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required 
      <% if (formData && formData.email) { %> value="<%= formData.email %>" <% } else { %> value="" <% } %>>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required>

    <label for="address">Address:</label>
    <input type="text" id="address" name="address" required 
      <% if (formData && formData.address) { %> value="<%= formData.address %>" <% } else { %> value="" <% } %>>

    <label for="contact">Contact Number:</label>
    <input type="text" id="contact" name="contact" required 
      <% if (formData && formData.contact) { %> value="<%= formData.contact %>" <% } else { %> value="" <% } %>>

    <label for="role">Role:</label>
    <select id="role" name="role" required>
      <option value="user" <% if (formData && formData.role === 'user') { %> selected <% } %>>User</option>
      <option value="admin" <% if (formData && formData.role === 'admin') { %> selected <% } %>>Admin</option>
    </select>

    <button type="submit">Register</button>
  </form>

</body>
</html>

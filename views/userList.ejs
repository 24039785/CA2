<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>User Management</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    .btn-secondary {
      background: #343a40;
      border: none;
    }

    .gradient-text {
      background: linear-gradient(to right, #ff6f00, #ff9100);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand gradient-text" href="#">Travelly</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/admin">Hotels Available</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/add">Add Hotel</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/edit-users">Edit User</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin-search">Search Hotel</a>
          </li>
        </ul>

        <a href="/logout" class="btn btn-secondary">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-5">
    <h1>User Management</h1>

    <% if (messages && messages.length> 0) { %>
      <div class="alert alert-danger">
        <% messages.forEach(msg=> { %>
          <p>
            <%= msg %>
          </p>
          <% }); %>
      </div>
      <% } %>

        <table class="table table-striped mt-4">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Role</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user=> { %>
              <tr>
                <td>
                  <%= user.id %>
                </td>
                <td>
                  <%= user.username %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.role %>
                </td>
                <td>
                  <a href="/admin/edit-user/<%= user.id %>" class="btn btn-primary btn-sm">Edit</a>
                </td>
              </tr>
              <% }); %>
          </tbody>
        </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>